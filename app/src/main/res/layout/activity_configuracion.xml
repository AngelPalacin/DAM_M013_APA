<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">

    <Switch
        android:id="@+id/notificacionesSwitch"
        android:layout_width="274dp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Habilitar Notificaciones"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/newsletterSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notificacionesSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Apuntarse a la Newsletter"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/enlacePiscinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsletterSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:autoLink="web"
        android:onClick="abrirEnlacePiscinas"
        android:text="Enlace a información sobre piscinas"
        android:textColor="#FFFFFF"
        android:textColorLink="#0000FF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/enlaceGDPR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enlacePiscinas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:autoLink="web"
        android:onClick="abrirEnlaceGDPR"
        android:text="Enlace a GDPR"
        android:textColor="#FFFFFF"
        android:textColorLink="#0000FF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/guardarConfiguracionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enlaceGDPR"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Enviar Información"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>
