<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cardioButton"
        android:layout_width="450dp"
        android:layout_height="299dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/cardio" />

    <TextView
        android:id="@+id/cardioText"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardioButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Cardio"
        android:textStyle="bold" />



    <ImageView
        android:id="@+id/fuerzaButton"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@id/cardioText"
        android:layout_marginTop="43dp"
        android:src="@drawable/fuerza" />

    <TextView
        android:id="@+id/fuerzaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fuerzaButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="Fuerza" />


</RelativeLayout>
